<!DOCTYPE html>
<html>
  <head>
    <title>MembersOnly</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'style' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="header">
    <%= image_tag 'members', class: 'members_img' %>
    <%= image_tag 'only', class: 'only_img' %>
      <% if current_user %>
        <%= link_to 'Edit User', edit_user_registration_path, class: 'edit_account' %>
        <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete } %>
        <%= link_to 'New Post', new_post_path(@post) %>
      <% else %>
        <p class='login_link'><%= link_to "Log in", new_user_session_path  %></p>
        <%= link_to "Register", new_user_registration_path, class: 'register_link' %>
      <% end %>
    </div>

    <div class="alert">
      <% if notice %>
        <p class="alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
