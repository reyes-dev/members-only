<%= link_to 'New Post', new_post_path(@post) %>

<h1>Posts</h1>

<ul>
  <% @posts.each do |post| %>
    <li>
      <% if user_signed_in? %>
        <%= post.title %>
        <%= post.body %>
        <%= 'Author: ' + post.user.name %>
      <% else %>
        <%= post.title %>
        <%= post.body %>
        <%= 'Author: Anonymous' %>
      <% end %>
    </li>
  <% end %>
</ul>